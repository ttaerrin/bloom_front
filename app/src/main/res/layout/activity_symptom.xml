<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spinner for selecting severity -->
    <Spinner
        android:id="@+id/spinner_severity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/severity_options" />

    <!-- Symptom list -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Symptom item template -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="두통"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_headache_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ic_radio_button_unchecked"
                        android:text="" />

                    <RadioButton
                        android:id="@+id/rb_headache_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_headache_severe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />
                </RadioGroup>
            </LinearLayout>

            <!-- Repeat the above block for each symptom -->
            <!-- 발열감 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="발열감"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_fever_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_fever_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_fever_severe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />
                </RadioGroup>
            </LinearLayout>

            <!-- 어지러움 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="어지러움"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_dizziness_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_dizziness_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_dizziness_severe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />
                </RadioGroup>
            </LinearLayout>

            <!-- 피부 건조 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="피부 건조"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_dry_skin_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_dry_skin_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_dry_skin_severe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />
                </RadioGroup>
            </LinearLayout>

            <!-- 관절 통증 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="관절 통증"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_joint_pain_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_joint_pain_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_joint_pain_severe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />
                </RadioGroup>
            </LinearLayout>

            <!-- 식은땀 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="식은땀"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_sweating_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_sweating_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_sweating_severe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />
                </RadioGroup>
            </LinearLayout>

            <!-- 관계 시 통증 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="관계 시 통증"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_painful_intercourse_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_painful_intercourse_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_painful_intercourse_severe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />
                </RadioGroup>
            </LinearLayout>

            <!-- 불면증 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="불면증"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_insomnia_mild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_insomnia_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />

                    <RadioButton
                        android:id="@+id/rb_insomnia_severe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:button="@drawable/ic_radio_button_unchecked" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Add symptom button -->
    <Button
        android:id="@+id/button_add_symptom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#E5C2FF"
        android:text="증상 추가하기"
        android:textColor="#000000" />
</LinearLayout>
